@using BasicLayout = Client.Layout.BasicLayout

<Router AppAssembly="@typeof(Program).Assembly">
	<Found Context="routeData">
		<RouteView DefaultLayout="@typeof(BasicLayout)" RouteData="@routeData" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(BasicLayout)">
			<Result Status="404" SubTitle="页面找不到了" Title="Not Found">
				<Extra>
					<Button Type="@ButtonType.Primary" OnClick="OnBackHome">返回主页</Button>
				</Extra>
			</Result>
		</LayoutView>
	</NotFound>
</Router>
<AntContainer />

@code {

	[Inject]
	public NavigationManager Navigator { get; set; }

	private void OnBackHome() => Navigator.NavigateTo("/");

}