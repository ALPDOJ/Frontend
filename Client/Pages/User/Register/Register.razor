@namespace Client.Pages.User
@layout UserLayout
@page "/user/register"

<div class="main__b__1">
	<div class="register">
		<h3>Registration</h3>
		<Form Model="@_user">
			<FormItem>
				<Input @bind-Value="@context.UserName" Placeholder="Mailbox" Size="@InputSize.Large"></Input>
			</FormItem>

			<FormItem>
				<Input @bind-Value="@context.Password" Placeholder="At Least 6-Digit Password, Case Sensitive"
					Size="@InputSize.Large" Type="password">
				</Input>
			</FormItem>

			<FormItem>
				<Input @bind-Value="@context.ConfirmPassword" Placeholder="Confirm Password" Size="@InputSize.Large"
					Type="password">
				</Input>
			</FormItem>

			<FormItem>
				<InputGroup Compact Size="@InputSize.Large" Style="display: table">
					<Select DefaultValue=@("+86") Size="large" Style="width: 25%" TItem="string" TItemValue="string">
						<SelectOptions>
							<SelectOption Label="+86" TItem="string" TItemValue="string" Value="@("+86")" />
							<SelectOption Label="+87" TItem="string" TItemValue="string" Value="@("+87")" />
						</SelectOptions>
					</Select>
					<AntDesign.Input @bind-Value="@context.Phone" Placeholder="Phone Number" Style="width: 75%;">
					</AntDesign.Input>
				</InputGroup>
			</FormItem>

			<FormItem>
				<FormItem>
					<Row Gutter="8">
						<AntDesign.Col Span="16">
							<AntDesign.Input @bind-Value="@context.Captcha" Placeholder="Verification Code"
								Size="@InputSize.Large">
							</AntDesign.Input>
						</AntDesign.Col>
						<AntDesign.Col Span="8">
							<Button Block Size="large">Get Code</Button>
						</AntDesign.Col>
					</Row>
				</FormItem>
			</FormItem>

			<FormItem>
				<Button class="submit" OnClick="Reg" Size="large" Type="primary">Register</Button>
				<a class="login" href="/user/login">Log in with an existing account</a>
			</FormItem>
		</Form>
	</div>
</div>