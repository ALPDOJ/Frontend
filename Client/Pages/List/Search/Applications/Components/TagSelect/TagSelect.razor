@namespace Client.Pages.List
@inherits AntDomComponentBase

<div class="@ClassMapper.Class" style="@Style">
	@if (!HideCheckAll)
	{
		<Tag Checkable Checked="_checkedAll" CheckedChange="HandleCheckedChange">@SelectAllText</Tag>

	}

	<CascadingValue Value="this">
		@ChildContent
	</CascadingValue>

	@if (Expandable)
	{
		<a class="trigger" @onclick="HandleExpand">
			@if (_expand)
			{
				@CollapseText
				<Icon Theme="outline" Type="Up" />

			}

			else
			{
				@ExpandText
				<Icon Theme="outline" Type="Down" />

			}
		</a>

	}
</div>