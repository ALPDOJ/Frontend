@namespace Client.Pages.Problem

<GridContent>
	<Card Class="content-card" Title="@("题目描述")">
		@Data.Content.Description
	</Card>
	
	@if (Data.Content.Format is not null) {
		<Card Class="content-card" BodyStyle="display:flex;" Title="@("数据格式")">
			<Card Style="flex-grow: 1" Title="输入" Bordered>
				@Data.Content.Format.Input
			</Card>
			<Divider Type="DirectionVHType.Vertical" />
			<Card Style="flex-grow: 1" Title="输出" Bordered>
				@Data.Content.Format.Output
			</Card>
		</Card>
	}

	@if (Examples?.Count > 0) {
		<Card Class="content-card" Title="@("样例")">
			@foreach (var example in Examples!) {
				<Card Bordered>
					@if (example.Input is not null) {
						<CardGrid Style="width: 50%">
							@example.Input
						</CardGrid>
						<CardGrid Style="width: 50%">
							@example.Output
						</CardGrid>
					}
					else {
						<CardGrid Style="width: 100%">
							@example.Output
						</CardGrid>
					}
					@if (example.Explanation is not null) {
						<CardGrid Style="width: 100%">
							@example.Explanation
						</CardGrid>
					}
				</Card>
			}
		</Card>
	}
	
	@if (Data.Content.InputRange is not null) {
		<Card Class="content-card" Title="输入数据范围">
			<AntList Bordered DataSource="Data.Content.InputRange!">
				@context.Description
			</AntList>
		</Card>
	}
	
	@if (Data.Content.Limitation is not null) {
		<Card Class="content-card" Title="代码限制">
			<Text>@Data.Content.Limitation</Text>
		</Card>
	}
</GridContent>

<style scoped>
	.content-card {
		margin-top: 24px;
	}
</style>

@code {

	[Parameter]
	public Problem Data { get; set; }

	[Parameter]
	public IList<TestCase> Examples { get; set; }
}
