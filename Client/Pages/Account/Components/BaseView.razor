@namespace Client.Pages.Account.Settings

<div class="baseView">
	<div class="left" style="min-width: 310px;">
		<Form Style="display:flex;" Model="@CurrentUser" OnFinish="OnSubmit">
			<div style="margin-right: 50px">
				<FormItem Label="昵称">
					<AntDesign.Input @bind-Value="@context.Name" />
				</FormItem>
				<FormItem Label="邮箱">
					<AntDesign.Input @bind-Value="@context.Email" />
				</FormItem>
				<FormItem>
					<Button HtmlType="submit" Type="@ButtonType.Primary">
						保存信息
					</Button>
				</FormItem>
			</div>
			<div>
				<FormItem Label="头像">
					<Upload ShowUploadList="false">
						<div class="avatar">
							<img alt="avatar" width="128" src="@CurrentUserAvatar" />
						</div>
					</Upload>
				</FormItem>
			</div>
		</Form>
	</div>
</div>

@code {

	[CascadingParameter]
	private User CurrentUser { get; set; }

	[CascadingParameter]
	private string? CurrentUserAvatar { get; set; }

	private void OnSubmit() {

	}

}
