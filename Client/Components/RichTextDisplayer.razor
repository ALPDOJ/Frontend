@using Markdig

@switch (Value.Format) {
	case RichTextFormat.Html:
		@((MarkupString)Value.Content)
		break;
	case RichTextFormat.Markdown:
		@((MarkupString)Markdown.ToHtml(Value.Content))
		break;
	case RichTextFormat.Raw:
		@(Value.Content)
		break;
}

@code {

	[Parameter]
	public RichText Value { get; set; }

}